@using Website.Models
@model IEnumerable<DanceInfo>
<div class="container margin-bottom-30">
	<div class="headline"><h2>Bolivian Dances</h2></div>
	<div class="row margin-bottom-20">
		@foreach (DanceInfo item in Model)
		{
			<div class="col-md-4 col-sm-6">
				<div class="thumbnails thumbnail-style thumbnail-kenburn">
					<div class="caption">
						<h3>
							@Html.ActionLink(item.Name, "Info", "Dances", new { dance = item.Name }, new { @class = "hover-effect" })
						</h3>
					</div>
					<div class="thumbnail-img">
						<div class="overflow-hidden">
							<img class="img-responsive" src="@item.ImagePath" alt="@item.Name">
						</div>
						@Html.ActionLink("learn more+", "Info", "Dances", new { dance = item.Name }, new { @class = "btn btn-more hover-effect" })
					</div>
					<div class="caption">
						<p>@item.ShortDescription</p>
						<audio controls="controls" preload="none">
							<source src="@item.AudioPath" type="audio/mpeg" />
						</audio>
						<p>@item.AudioDescription</p>
					</div>
				</div>
			</div>
		}
	</div>
</div>